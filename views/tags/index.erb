<h2>Tags</h2>

<br>
<br>
<div class="SAVE">
  <form action="/tags" method="post" class="cnt-form">
    <label for="name">Add Tag:</label>
    <input type="text" name="name" id="name"/>
    <input type="submit" value="Create" />
  </form>
</div>
<br>
<br>
<div>
<table>
  <tr class="head">
    <th></th>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
<div class="SHOW_ALL">
    <% x = 0 %>
    <% @tags.each do |tag| %>
    <tr>
      <div>
        <td class="index"><%= x += 1  %></td>
        <td class="name"><%= tag.name  %> </td>
        <td class="img"><a href="/tags/<%= tag.id  %>/edit"><img src="/images/edit.png" class="icon"></a> </td>
        <td class="update"></td>
      </div>
    </tr>
    <% end %>
  </table>
</div>
